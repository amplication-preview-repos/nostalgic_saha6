datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Feedback {
  createdAt    DateTime  @default(now())
  feedbackType String?
  id           String    @id @default(cuid())
  message      String?
  submittedAt  DateTime?
  updatedAt    DateTime  @updatedAt
  website      Website?  @relation(fields: [websiteId], references: [id])
  websiteId    String?
}

model Website {
  createdAt DateTime   @default(now())
  feedbacks Feedback[]
  id        String     @id @default(cuid())
  name      String?
  updatedAt DateTime   @updatedAt
  user      User?      @relation(fields: [userId], references: [id])
  userId    String?
}

model FeedbackType {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  screenshot  Json?
  typeField   String?
  updatedAt   DateTime @updatedAt
}

model User {
  createdAt DateTime  @default(now())
  email     String?   @unique
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime  @updatedAt
  username  String    @unique
  websites  Website[]
}
